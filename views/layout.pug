doctype html
html
  head
    title Knowledgebase
    link(rel='stylesheet' href='/bower_components/bootstrap/dist/css/bootstrap.css')
    link(rel='stylesheet' href='/css/style.css')
  body
    nav.navbar.navbar-expand-lg.navbar-light.bg-light
      .container-fluid
        a.navbar-brand(href='#') Knowledgebase     
        button.navbar-toggler(type='button', data-bs-toggle='collapse', data-bs-target='#navbarNav', aria-controls='navbarNav', aria-expanded='false', aria-label='Toggle navigation')
          span.navbar-toggler-icon     
        #navbarNav.collapse.navbar-collapse
          ul.navbar-nav
            li.nav-item
               a.nav-link.active(aria-current='page', href='/') Home
            if user         
              li.nav-item
                a.nav-link(href='/articles/add') Add Article
              
                  
        #navbarNav.collapse.navbar-collapse
          ul.navbar-nav
            if user
              li 
                a.nav-link(href='/users/logout') Logout
            else
                      
              li.nav-item
                a.nav-link(href='/users/login') Login       
              li.nav-item 
                a.nav-link(href='/users/register') Register
                  
    .container
      != messages('message', locals)
      if errors
        each error, i in errors
          div(class="alert alert-danger") #{error.msg}
      block content
      br
      hr
      footer
        p Copyright &copy; 2021
    script(src='/bower_components/jquery/dist/jquery.js')
    script(src='/bower_components/bootstrap/dist/js/bootstrap.js')
    script(src='/js/main.js')  
